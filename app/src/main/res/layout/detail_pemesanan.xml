<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_lapangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lapangan"
                android:gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/harga_lapangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Harga"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/waktu_pilih_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tanggal"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Waktu Jam yang dipilih"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/total_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Total Bayar"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/metode_bayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Metode Bayar"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/keterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Keterangan"
                android:textColor="#f00"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/no_hp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="No HP"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Bank"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nama_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nama Rekening"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/no_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="No Rekening"
                android:textSize="18sp" />

            <Button
                android:id="@+id/pesan_sekarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pesan Sekarang" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>